@model IEnumerable<MyMusicList.Areas.User.Models.Genre>

@{
    ViewBag.Title = "Genres";
}

@Html.Partial("Notifications", "Genre")

<h2>Genres</h2>

<p>
    <a class="btn blue" href="@Url.Action("Insert", "Genre")"><i class="icon-plus"></i> Add Genre</a>
</p>

<div class="row-fluid">

    <div class="span8">

        <div class="portlet box red">

            <div class="portlet-title">
                <div class="caption"><i class="icon-th-list"></i>Genres</div>
                <div class="tools">
                    <a class="collapse" href="javascript:;"></a>
                    <a class="reload" href="javascript:;"></a>
                </div>
            </div>


            <div class="portlet-body">
                <table class="table table-striped table-hover dataTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th style="width:150px; text-align:center;">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var genre in Model)
                        {
                            <tr>
                                <td>@genre.Name</td>
                                <td>@genre.Description</td>
                                <td style="width:150px; text-align:center;"><a class="btn mini black" style="margin-left:3px;" href="Genre/Edit/@genre.ID" ><i class="icon-edit"></i> Edit</a> <a class="btn mini red" href="Genre/Delete/@genre.ID" onclick="if(!confirm('Are you sure?'))return false; else return true;"><i class="icon-trash"></i> Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
<script src="~/include/plugins/jquery-1.8.3.min.js"></script>
<script type="text/javascript">

    $(document).ready(function () {
        //Set the active link in the main navigation
        $(".page-sidebar .active").find(".selected").remove();
        $(".page-sidebar .active").removeClass("active").removeClass("start");

        $("#genresLink").addClass("start").addClass("active");
        $("#genresLink").find("a").append("<span class='selected'></span>");
    });
</script>