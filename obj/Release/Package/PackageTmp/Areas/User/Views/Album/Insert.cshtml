@model MyMusicList.Areas.User.Models.Album

@{
    ViewBag.Title = "Insert";
}

<h2>insert new album</h2>


@{ string imgURl = (Model.ImgUrl != null && Model.ImgUrl != "") ? "~" + Model.ImgUrl : "http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image"; }
<div class="row-fluid">

    <div class="portlet box red">

        <div class="portlet-title">
            <div class="caption"><i class="icon-reorder"></i>Album Info</div>
            <div class="tools">
                <a class="collapse" href="javascript:;"></a>
                <a class="reload" href="javascript:;"></a>
            </div>
        </div>

        <div class="portlet-body form">

            @using (Html.BeginForm("Insert", "Album", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data", id = "validateSubmitForm" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

               @Html.HiddenFor(model => model.ArtistID);
               @Html.HiddenFor(model => model.Mp3ID);
               @Html.HiddenFor(model => model.ImgUrl);
                
               <div class="control-group">
                    <label class="control-label">Artist</label>
                    <div class="controls">
                        <label class="control-label" style="text-align:left !important;"><b>@Model.Artist.Name</b></label>
                    </div>
                </div> 
                
               <div class="control-group">
                    <label class="control-label">Album Name</label>
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Name, new { @class = "span2 m-wrap" })
                    </div>
                </div>
                
                <div class="control-group">
                    <label class="control-label">Description</label>
                    <div class="controls">
                        @Html.TextAreaFor(model => model.Description, new { @class = "span6 m-wrap" })
                    </div>
                </div>
                
                 <div class="control-group">
                    <label class="control-label">Cover Image:</label>
                    <div class="controls">
                        <div class="fileupload fileupload-new" data-provides="fileupload">
                            <div class="input-append"><div class="uneditable-input">
                                    <i class="icon-file fileupload-exists"></i> 
                                    <span class="fileupload-preview"></span>
                                </div><span class="btn btn-file">
                                <span class="fileupload-new">Select file</span>
                                <span class="fileupload-exists">Change</span>
                                <input type="file" class="default" name="file" id="file"/>
                                </span>
                                <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
                            </div>
                        </div>
                    </div>
                </div>
                
                
                <div class="control-group">
                    <label class="control-label">Current Cover:</label>
                    <div class="controls">
                        <div style="width: 200px; height: 150px;" class="fileupload-new thumbnail">
                            @if(Model.ImgUrl != null && Model.ImgUrl != "")
                            {
                                <img style="width:200px; height:150px;" alt="cover" src="@Model.ImgUrl">
                            }
                            else
                            {
                                <img style="width:200px; height:150px;" alt="cover" src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image">
                            }
                        </div>
                    </div>
                </div>
                
                <div class="form-actions">
                    <button class="btn blue" type="submit">Submit</button>
                    <button class="btn" type="button">Cancel</button>
                </div>
            }

        </div>

    </div>

    <div>
        <a href="../../Album/?x=@Model.ArtistID"> Back to List </a>
    </div>

</div>
